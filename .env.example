# UrBackup Server Environment Variables
# Copy this file to .env and modify as needed

# Server Configuration
URBACKUP_PORT_WEB=55414
URBACKUP_PORT_SERVER=55413
URBACKUP_PORT_FASTCGI=35623

# Container Configuration
PUID=1000
PGID=1000
TZ=Europe/Moscow

# Paths (relative to docker-compose.yml location)
URBACKUP_DATA_PATH=./urbackup/backups
URBACKUP_DB_PATH=./urbackup/database
URBACKUP_CONFIG_PATH=./urbackup/config

# Docker Image
URBACKUP_IMAGE=uroni/urbackup-server:latest

# Network
NETWORK_NAME=urbackup-net

# Backup Settings (can be configured via web interface)
# DEFAULT_BACKUP_INTERVAL=24h
# DEFAULT_FILE_BACKUP_INTERVAL=4h
# MAX_FILE_VERSIONS=30
# MAX_IMAGE_VERSIONS=4
